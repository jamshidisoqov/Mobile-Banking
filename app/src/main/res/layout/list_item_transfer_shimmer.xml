<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_small"
    android:paddingVertical="@dimen/margin_std">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_transfer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_std"
        app:cardBackgroundColor="@color/shimmer_background"
        app:cardCornerRadius="@dimen/margin_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/tv_transfer_where"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/margin_component"
        android:background="@drawable/bg_shimmer"
        app:layout_constraintStart_toEndOf="@id/image_transfer"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_descriptions"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/margin_std"
        android:background="@drawable/bg_shimmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_transfer_where"
        app:layout_constraintTop_toBottomOf="@id/tv_transfer_where" />
</androidx.constraintlayout.widget.ConstraintLayout>