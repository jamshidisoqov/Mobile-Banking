<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_component</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_component</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_component</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_component</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/margin_component</item>
        <item name="backgroundColor">#fff</item>
    </style>

    <style name="CircleImageView" parent="Theme.MaterialComponents.Light">
        <item name="cornerSize">50%</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="MaterialGitaBankButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerSize">@dimen/margin_component</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_input_text</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>